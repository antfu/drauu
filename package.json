{
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "play:dev": "pnpm -C playground run dev -- --open",
    "play:build": "pnpm -C playground run build",
    "js:dev": "pnpm run -r --parallel --filter=./packages/* dev",
    "js:build": "pnpm run -r --filter=./packages/* build",
    "dev": "nr play:dev",
    "build": "nr js:build",
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json --tag --commit --push && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.27.0",
    "@antfu/ni": "^0.18.0",
    "@types/node": "^18.7.21",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "bumpp": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "nanoevents": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.12.2",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  }
}
