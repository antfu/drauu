{
  "version": "0.3.4",
  "private": true,
  "scripts": {
    "play:dev": "pnpm -C playground run dev -- --open",
    "play:build": "pnpm -C playground run build",
    "js:dev": "pnpm run -r --parallel --filter=./packages/* dev",
    "js:build": "pnpm run -r --filter=./packages/* build",
    "dev": "nr play:dev",
    "build": "nr js:build",
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@antfu/ni": "^0.21.6",
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "bumpp": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "nanoevents": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.6.12",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
